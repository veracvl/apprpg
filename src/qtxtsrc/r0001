      create table R0001 (
         idCustomer int not null,
         identCode varchar(15) not null,
         firstName varchar(30) not null,
         surName varchar(30) not null,
         maritalStatus char(1) not null,
         birthDay timestamp not null,
         fnRelationType char(1) not null,
         fnCompanyName varchar(100),
         fnCompanyAddr varchar(100),
         fnCompanyNmbr varchar(15),
         fnPosition varchar(4),
         fnSalary decimal(14,2),
         fnWorkStdt timestamp,
         status char(1) not null,
         crtDate timestamp not null,
         crtUser varchar(10) not null,
         crtWrks varchar(10) not null,
         primary key(idCustomer)
      );
      label on column R0001 (
         idCustomer text is 'Customer Number',
         identCode text is 'Identification Number',
         firstName text is 'First Name',
         surName text is 'Last Name',
         maritalStatus text is 'Marital Status',
         birthDay text is 'Birth of Date',
         fnRelationType text is 'Relation Type',
         fnCompanyName text is 'Company Name',
         fnCompanyAddr text is 'Company Address',
         fnCompanyNmbr text is 'Company Cnt. Number',
         fnPosition text is 'Position',
         fnSalary text is 'Salary',
         fnWorkStdt text is 'Start Work',
         status text is 'Status A/I',
         crtDate text is 'Date Created',
         crtUser text is 'User Created',
         crtWrks text is 'WorkStation'
      );
